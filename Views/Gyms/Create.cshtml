@model Sport.Gym

@{
    ViewData["Title"] = "Додати зал";
}

<h1>Додати зал</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


    <table>
        <tr>
            <td>
                <form method="get" asp-controller="Gyms" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="До списку залів" />
                </form>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <form method="get" asp-controller="Home" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="Повернутись до меню" />
                </form>
            </td>
        </tr>
    </table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
