@model Sport.Payment

@{
    ViewData["Title"] = "Видалити оплату";
}



<h3>Видалити оплату?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaymentDone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPaymentDone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClCardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyCardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsOverPay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOverPay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDebt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDebt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Passes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passes.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />

    </form>
    <table>
        <tr>
            <td>
                <form method="get" asp-controller="Payments" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="До списку оплат" />
                </form>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <form method="get" asp-controller="Home" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="Повернутись до меню" />
                </form>
            </td>
        </tr>
    </table>
</div>
