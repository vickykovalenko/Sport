@model Sport.Client

@{
    ViewData["Title"] = "Видалити";
}



<h3>Видалити клієнта?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> 

    </form>
    <table>
        <tr>
            <td>
                <form method="get" asp-controller="Clients" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="До списку клієнтів" />
                </form>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <form method="get" asp-controller="Home" asp-action="Index">
                    <input type="submit" class="btn btn-secondary" value="Повернутись до меню" />
                </form>
            </td>
        </tr>
    </table>
</div>
